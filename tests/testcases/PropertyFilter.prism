init
    1 <= _a + _b &
    _a + _b <= 1 &
    _a_s = 0
endinit

module _controller
    _a    : [0..1];
    _b    : [0..1];
endmodule

formula _active    = true;
formula _a_active  = _a = 1;
formula _b_active  = _b = 1;

module _a_a_impl
    _a_s : [0..2];

    [] (_a_active & _a_s = 0) -> 0.5:(_a_s' = 1) + 0.5:(_a_s' = 2);
    [] (_a_active & _a_s > 0) -> true;
endmodule

