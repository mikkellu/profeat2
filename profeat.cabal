name:                profeat
version:             0.5.0
synopsis:            A feature modelling language
author:              Philipp Chrszon
maintainer:          Philipp.Chrszon@mailbox.tu-dresden.de
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:     Control.Monad.Either,
                       Control.Monad.Either.Class
                       Error,
                       SrcLoc,
                       Syntax,
                       Syntax.Operators
  hs-source-dirs:      src
  build-depends:       base >=4.6 && <5,
                       mtl >=2.1.2,
                       transformers >=0.3.0.0,
                       text >=0.11.3,
                       wl-pprint-text >=1.1
  ghc-options:         -Wall

executable profeat
  main-is:             Main.hs
  build-depends:       base >=4.6 && <5,
                       profeat
  hs-source-dirs:      src
  ghc-options:         -Wall

test-suite profeat-tests
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  -- other-modules:
  hs-source-dirs:      tests
  build-depends:       base >=4.3 && <5,
                       profeat
